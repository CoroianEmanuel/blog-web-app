<%- include("partials/header.ejs") %>

<% if(locals.titlePost && locals.textPost){ %> 
    <h1>Your Post</h1>
    <div class="Post">
        <h2>
            <%= titlePost %>
        </h2>
        <p class="text-post">
            <%= textPost %>
        </p>
        <div class="icon-container">
            <form action="/create" method="POST" style="display:inline;">
                <input type="hidden" name="titlePost" value="<%= titlePost %>">
                <input type="hidden" name="textPost" value="<%= textPost %>">
                <button type="submit" style="border: none; background: none; cursor: pointer;">
                    <i class="bi bi-pencil"></i> 
                </button>
            </form>
            <form action="/" method="POST" style="display:inline;">
                <input type="hidden" name="titlePost" value="<%= textPost %>">
                <button type="submit" style="border: none; background: none; cursor: pointer;">
                    <i class="bi bi-trash"></i>
                </button>
            </form>
        </div>
    </div>
<% } else { %>
    <div class="centerd-container">
        <h1>Here will be displayed all your posts</h1>
    </div>
<% } %>

<%- include("partials/footer.ejs")  %>